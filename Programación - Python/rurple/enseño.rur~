stone=0
def harvest():
    global stone
    if on_stone():
        pick_stone()
        stone=stone+1
def spin_to_left():
    turn_left()
    move()
    harvest()
    turn_left()
def spin_to_right():
    turn_left()
    turn_left()
    turn_left()
    move()
    harvest()
    turn_left()
    turn_left()
    turn_left()


while front_is_clear ():
    move()
    harvest()
    if stone==6 or stone==18:
        spin_to_left()
    if stone==12:
        spin_to_right()
    if stone==24:
        break;
print("Se acab√≥")